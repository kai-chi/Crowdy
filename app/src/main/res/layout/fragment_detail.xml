<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kaichi.crowdy.DetailFragment">

    <LinearLayout
        android:id="@+id/fragmentDetailLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cpv_required_padding"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="6dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/detailTitleTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginTop="@dimen/event_title_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/detailTitleInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/event_title_size"
                android:backgroundTint="@android:color/transparent"
                android:textStyle="bold"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/detailDescriptionTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/detailDescriptionInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textSize="@dimen/medium_text_size"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>
