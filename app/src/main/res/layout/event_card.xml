<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/surveyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/event_card_margin"
        android:background="@color/colorLightPrimaryColor"
        android:clickable="true"
        android:elevation="@dimen/event_card_elevation"
        app:cardCornerRadius="@dimen/cardCornerRadius" android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightPrimaryColor">

            <TextView
                android:id="@+id/eventTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_title_hint"
                android:lines="1"
                android:paddingLeft="@dimen/event_title_padding"
                android:paddingRight="@dimen/event_title_padding"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/event_title_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventTitleTextView"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/event_title_padding"
                android:layout_marginRight="@dimen/event_title_padding"
                android:hint="@string/event_description_hint"
                android:lines="3"
                android:textColor="@color/colorSecondaryText"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>